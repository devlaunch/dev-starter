{
  "name": "@devlaunch/ui-badge",
  "version": "1.0.0",
  "description": "The bootstrap badge component created with styled-components",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "private": false,
  "scripts": {
    "start": "react-scripts start",
    "build-examples": "react-scripts build",
    "test": "react-scripts test",
    "snapshot": "CI=true react-scripts test --updateSnapshot",
    "build": "rm -rf dist && NODE_ENV=production babel src/lib --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "prepublish": "yarn build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  },
  "jest": {
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "author": "Devlaunch <devlaunchorg@gmail.com>",
  "license": "MIT",
  "keywords": [
    "components",
    "react",
    "react-component",
    "ui",
    "styled-components",
    "badge",
    "bootstrap",
    "presentational",
    "stateless"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devlaunch/dev-starter.git"
  },
  "bugs": {
    "url": "https://github.com/devlaunch/dev-starter/issues"
  },
  "homepage": "https://github.com/devlaunch/dev-starter",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "jest-enzyme": "^7.0.0",
    "jest-styled-components": "^6.2.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-scripts": "2.0.4",
    "react-test-renderer": "^16.5.2",
    "styled-components": "^4.0.2",
    "styled-system": "^3.1.6"
  },
  "peerDependencies": {
    "react": "^16.5.2",
    "styled-components": "^4.0.2",
    "styled-system": "^3.1.10"
  },
  "dependencies": {
    "@devlaunch/ui-base": "^1.0.0",
    "styled-components-modifiers": "^1.0.3"
  }
}
